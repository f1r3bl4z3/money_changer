<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context="com.example.aliasger.myapplicationdesign.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="50 x"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/chipsdecquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:clickable="false"
                android:onClick="decreaseQuantity"
                android:padding="8dp"
                android:text="-" />

            <TextView
                android:id="@+id/chipsQuantity_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/chipsincquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="increaseQuantity"
                android:padding="8dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="100 x"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <Button
                android:id="@+id/kukudecquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:clickable="false"
                android:onClick="decreaseQuantity"
                android:padding="8dp"
                android:text="-" />

            <TextView
                android:id="@+id/kukuQuantity_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/kukuincquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="increaseQuantity"
                android:padding="8dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="200 x"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <Button
                android:id="@+id/sausagedecquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:clickable="false"
                android:onClick="decreaseQuantity"
                android:padding="8dp"
                android:text="-" />

            <TextView
                android:id="@+id/sausageQuantity_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/sausageincquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="increaseQuantity"
                android:padding="8dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="500 x"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <Button
                android:id="@+id/mishkakidecquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:clickable="false"
                android:onClick="decreaseQuantity"
                android:padding="8dp"
                android:text="-" />

            <TextView
                android:id="@+id/mishkakiQuantity_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="0"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/mishkakiincquantityBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="increaseQuantity"
                android:padding="8dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totallbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Total: "
                android:textAllCaps="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/grandTotalLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tsh. 0"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sendOrderBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="sendMessage"
                android:padding="8dp"
                android:text="Proceed to choose Dealer"
                android:textAllCaps="false" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>